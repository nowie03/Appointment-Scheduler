@{
    bool emailExists = false;
    bool passwordAndConfirmMatches = false;
}

<div class="container-fluid p-5">
    <form asp-action="ResetPassword" method="post" >
        <div class="mb-3">
            <label for="exampleInputEmail1" class="form-label">Email address</label>
            @if (emailExists == true)
            {
                <input name="email" type="email" class="form-control " id="exampleInputEmail1" aria-describedby="emailHelp">
            }
            @if (emailExists == false)
            {
                <input name="email" type="email" class="form-control is-invalid" id="exampleInputEmail1" aria-describedby="emailHelp">

                <div class="invalid-feedback">
                    email doesnt Exists,you can try creating new account
                </div>
            }

        </div>
        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input required name="password" type="password" class="form-control" id="exampleInputPassword1">
            
        </div>
        <div class="mb-3">
            <label for="exampleInputConfirmPassword1" class="form-label">Confirm Password</label>
            @if (passwordAndConfirmMatches == false)
            {
                <input required name="confirm-password" type="password" class="form-control is-invalid" id="exampleInputConfirmPassword1">
                <div class="invalid-feedback">
                    Confirm password doesnt matches with password!
                </div>
            }
        </div>
        <button type="submit" class="btn btn-success">Reset</button>
        <a href="/" class="btn btn-danger">Cancel</a>

    </form>
</div>
